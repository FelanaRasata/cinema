                        <a class="sidebar-link" href="/Users/SignOut" aria-expanded="false">
                            
                            <span class="hide-menu">Sign Out</span>
                        </a>
                    </li>

                </ul>

            </nav>
            <!-- End Sidebar navigation -->
        </div>
