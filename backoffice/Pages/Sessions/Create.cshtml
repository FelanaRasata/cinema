@page
@model backoffice.Pages_Sessions.CreateModel

@{
    ViewData["Title"] = "Create Session";
}

<h4>Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Session.MovieId" class="control-label"></label>
                <select asp-for="Session.MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Session.SessionDateTime" class="control-label"></label>
                <input asp-for="Session.SessionDateTime" class="form-control" />
                <span asp-validation-for="Session.SessionDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.Room" class="control-label"></label>
                <select asp-for="Session.Room" class="form-control" asp-items="ViewBag.Rooms"></select>
                <span asp-validation-for="Session.Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
