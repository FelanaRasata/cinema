@page
@model backoffice.Pages_Movies.EditModel

@{
    ViewData["Title"] = "Edit Movie ";
}


<h4>Movie</h4>
<hr/>
<div class="row">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Movie.Id"/>
        <div class="mb-3 form-check">
            <label asp-for="Movie.Title" class="control-label"></label>
            <input asp-for="Movie.Title" class="form-control"/>
            <span asp-validation-for="Movie.Title" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <label asp-for="Movie.Description" class="control-label"></label>
            <textarea asp-for="Movie.Description" class="form-control"></textarea>
            <span asp-validation-for="Movie.Description" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <label asp-for="Movie.Duration" class="control-label">Duration (mn)</label>
            <input asp-for="Movie.Duration" class="form-control"/>
            <span asp-validation-for="Movie.Duration" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <label asp-for="Movie.Category" class="control-label"></label>
            <input asp-for="Movie.Category" class="form-control"/>
            <span asp-validation-for="Movie.Category" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input type="submit" value="Update" class="btn btn-primary"/>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}